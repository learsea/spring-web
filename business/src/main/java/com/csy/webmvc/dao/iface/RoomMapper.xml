<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC
"-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.csy.webmvc.dao.iface.RoomDao">
	<select id="getRooms" resultMap="room">
		SELECT * FROM room ORDER BY
		priority LIMIT #{offset},#{size};
	</select>

	<insert id="saveRoom" parameterType="room" useGeneratedKeys="true"
		keyProperty="roomId">
		INSERT INTO room
		<trim prefix="(" suffix=") " suffixOverrides=",">
			<if test="userId != null">
				user_id,
			</if>
			<if test="address != null">
				address,
			</if>
			<if test="url != null">
				url,
			</if>
			<if test="priority != null">
				priority,
			</if>
		</trim>
		<trim prefix="VALUES (" suffix=")" suffixOverrides=",">
			<if test="userId != null">
				#{userId},
			</if>
			<if test="address != null">
				#{address},
			</if>
			<if test="url != null">
				#{url},
			</if>
			<if test="priority != null">
				#{priority},
			</if>
		</trim>
	</insert>

	<delete id="delRoom" parameterType="int">
		DELETE FROM room WHERE
		user_id = #{userId};
	</delete>

	<resultMap type="room" id="room">
		<id column="room_id" property="roomId" />
		<result column="user_id" property="userId" />
	</resultMap>
</mapper>
